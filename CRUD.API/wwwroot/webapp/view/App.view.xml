<mvc:View
	controllerName="sap.ui.api.jogadores.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<Shell >
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<Table 
					items="{/jogadores}">
						<headerToolbar>
							<OverflowToolbar>
								<content>
									
								</content>
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column
							width="3.5rem" >
								<Text text="Id"/>
							</Column>
							<Column
							width="13rem" >
								<Text text="Nome"/>
							</Column>
							<Column 
							width="13rem">
								<Text text="Sobrenome"/>
							</Column>
							<Column 
							width="13.0rem">
								<Text text="E-mail"/>
							</Column>
							<Column
							width="3.5rem" > 
								<Text text="Elo"/>
							</Column>
							<Column >
								<Text text="Data de Nascimento"/>
							</Column>
							<Column >
								<Text text="Data de Cadastro"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem >
								<cells>
									<Text text="{id}"/>
									<Text text="{nome}"/>
									<Text text="{sobrenome}"/>
									<Text text="{email}"/>
									<Text text="{elo}"/>
									<Text text="{dataNascimento}"/>
									<Text text="{dataCriacao}"/>

								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
	</Shell>
</mvc:View>
